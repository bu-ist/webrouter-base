#
# HTTPS server configuration
#

server {
    listen       443 ssl default_server;
    listen       [::]:443 ssl;
    server_name  _;
    root         /usr/share/nginx/html;

    ssl_certificate /etc/pki/nginx/cert.pem;
    ssl_certificate_key /etc/pki/nginx/cert.key;
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

<% if ENV['IS_FRONT_END'] %>
    # make certain that we set the appropriate host headers for proxying
    # this is only if we are the front-end system - otherwise we should comment these out
    #
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Real-IP $remote_addr ;
<% else %>
    # Set VPC subnet as trusted
    set_real_ip_from 10.0.0.0/8;

    # Set CloudFront subnets as trusted
    # now included from an external file
    include /etc/nginx/cloudfront_ips.conf ;

    # these are now at the end to see if they help
    real_ip_header X-Forwarded-For ;
  
    # Ignore trusted IPs
    real_ip_recursive on;
 
<% end %>

    # these should be set no matter what
    proxy_http_version 1.1;
    proxy_set_header Host $host ;
    proxy_set_header X-Forwarded-Proto "https" ;
    proxy_set_header X-Method "https" ;
    proxy_set_header X-SSL on ;

    # Load configuration files for the default server block.
    include /etc/nginx/default.d/*.conf;

    location / {
    }

    error_page 404 /404.html;
        location = /40x.html {
    }

    error_page 500 502 503 504 /50x.html;
        location = /50x.html {
    }
    
}

