#
# HTTPS server configuration
#

server {
    listen       443 ssl default_server;
    listen       [::]:443 ssl;
    server_name  _;
    root         /usr/share/nginx/html;

    ssl_certificate /etc/pki/nginx/cert.pem;
    ssl_certificate_key /etc/pki/nginx/cert.key;
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # make certain that we set the appropriate host headers for proxying
    # this is only if we are the front-end system - otherwise we should comment these out
    #
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Real-IP $remote_addr ;

    # these should be set no matter what
    proxy_http_version 1.1;
    proxy_set_header Host $host ;
    proxy_set_header X-Forwarded-Proto "https" ;
    proxy_set_header X-Method "https" ;
    proxy_set_header X-SSL on ;

    # make certain that we set the appropriate host headers for proxying
    # this is only if we are the front-end system - otherwise we should comment these out
    #
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Real-IP $remote_addr ;

    # Load configuration files for the default server block.
    include /etc/nginx/default.d/*.conf;

    location / {
    }

    error_page 404 /404.html;
        location = /40x.html {
    }

    error_page 500 502 503 504 /50x.html;
        location = /50x.html {
    }
    
    # these definitions are moved into the default and ssl server blocks since they are slightly different 
    # in the different locations
    #
    # UISCGI has different destinations based on https vs http
    location /@uiscgi_app/ {
      rewrite ^/@uiscgi_app(.*)$ $1 break;
      internal;
      add_header X-Upstream "uiscgi_app" always;
      #proxy_ssl on;
      #proxy_http_version 1.1;
      #proxy_set_header Host $host;
      proxy_pass https://<%= ENV['BACKEND_UISCGI_APP'] || "ist-uiscgi-app-#{ENV['LANDSCAPE']}.bu.edu"  %> ;
    }

    location /@uiscgi_content/ {
      rewrite ^/@uiscgi_content(.*)$ $1 break;
      internal;
      add_header X-Upstream "uiscgi_content" always;
      #proxy_ssl on;
      #proxy_http_version 1.1;
      #proxy_set_header Host $host;
      proxy_pass https://<%= ENV['BACKEND_UISCGI_CONTENT'] || "ist-uiscgi-content-#{ENV['LANDSCAPE']}.bu.edu"  %> ;
    }

}

