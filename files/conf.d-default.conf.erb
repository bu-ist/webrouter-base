#
# The default server
#

server {
    listen       80 default_server;
    listen       [::]:80 default_server;
    server_name  _;
    root         /usr/share/nginx/html;

    # BU frontends provide these headers
    #
    add_header X-BU-Main-Uniqueid $http_x_amz_cf_id always;

<% if ENV['IS_FRONT_END'] %>
    # 
<% else %>
    # All options related to getting the real IP from the front-end headers can be found in the
    # external file
    #
    include /etc/nginx/cloudfront_ips.conf ;
<% end %>

    # these should be set no matter what
    proxy_http_version 1.1;

    # Deliberately empty: do not do anything with these paths, as they will allow HTTP
    location /link/ {}
    location /uis_web3270/ {}
    location /uis_eostc/ {}
    location /uiszl_eostc/ {}
    location /uiszl_pdf/ {}
    location /htbin/ {}
    location /testing/ {}

    # ALL other paths get redirected to HTTPS
    location / {
       return 303 https://$server_name$request_uri;
		}

    # Load configuration files for the default server block.
    include /etc/nginx/default.d/*.conf;

    error_page 404 /404.html;
        location = /40x.html {
    }

    error_page 500 502 503 504 /50x.html;
        location = /50x.html {
    }

}

